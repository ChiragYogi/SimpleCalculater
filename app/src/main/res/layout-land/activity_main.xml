<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="UsingOnClickInXml" >

    <EditText
        android:id="@+id/input_edt"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/result_edt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/edt_bacground"
        android:clickable="false"
        android:cursorVisible="true"
        android:importantForAutofill="no"
        android:inputType="none"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        android:textStyle="bold"
        android:verticalScrollbarPosition="right"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/result_edt"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textStyle="bold"
        android:importantForAutofill="no"
        android:padding="8dp"
        android:ellipsize="end"
        android:textSize="25sp"
        android:focusable="false"
        android:clickable="false"
        android:inputType="none"
        android:background="@drawable/edt_bacground"
        android:textAlignment="viewEnd"
        android:textColor="@color/edt_color"
        android:layout_above="@+id/buttonLayout"
        tools:ignore="LabelFor" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonClear"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/clear"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonRoot"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/root"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonBack"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/back"
                android:textColor="@color/special_button_color"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonDevide"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/divivde"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonSeven"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/seven"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEight"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/eight"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonNine"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/nine"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMultiply"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/multiply"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonFour"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/four"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonFive"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/five"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonSix"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/six"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonMinus"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/minus"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonOne"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/one"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonTwo"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/two"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonThree"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/three"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonPluse"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/pluse"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <Button
                android:id="@+id/buttonDoubleZero"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/doubleZero"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonZero"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/zero"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonDot"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/dot"
                android:textColor="@color/button_color"
                android:textSize="20sp" />

            <Button
                android:id="@+id/buttonEqual"
                style="?attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="buttonClick"
                android:text="@string/equal"
                android:textColor="@color/special_button_color"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>